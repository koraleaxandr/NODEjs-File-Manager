{
  "compilerOptions": {
    "module": "ES2020",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "outDir": "./dist/",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "strictBindCallApply": true

  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically, explained below
    "esm": true
  },
  "files": [
    "./src/app.ts"
  ],
  "lib": ["ES2021"]
}